        colone = "#FF0080";
        coltwo = "#7928CA";
    }
    if(currentScheme == "red") {
        currentCode = "310deg, #ea0606 0%, #ff667c 100%";
        colone = "#ea0606";
        coltwo = "#ff667c";
    }
    if(currentScheme == "green") {
        currentCode = "310deg, #17ad37 0%, #98ec2d 100%";
        colone = "#17ad37";
        coltwo = "#98ec2d";
    }
    if(currentScheme == "yellow") {
        currentCode = "310deg, #f53939 0%, #fbcf33 100%";
